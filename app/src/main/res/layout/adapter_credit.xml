<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal"
        android:layout_below="@+id/creditAverage"
        android:id="@+id/bububaba"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:padding="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="년도\n(학기)"
            android:gravity="center"
            android:id="@+id/creditYear"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Practical English C1"
            android:layout_weight="5"
            android:id="@+id/creditName"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <TextView
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:text="학년"
            android:layout_weight="1"
            android:id="@+id/creditGrade"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <TextView

            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:text="학점"
            android:layout_weight="1"
            android:id="@+id/creditCredit"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <TextView

            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:text="성적"
            android:layout_weight="1"
            android:id="@+id/creditMark"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
</LinearLayout>