<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_below="@+id/creditAverage"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:background="@drawable/textborder_adapter"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:id="@+id/creditYear2"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:background="@drawable/textborder_adapter"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="5"
            android:id="@+id/creditName2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <TextView
            android:background="@drawable/textborder_adapter"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/creditGrade2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <TextView
            android:background="@drawable/textborder_adapter"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/creditCredit2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
    <TextView
            android:background="@drawable/textborder_adapter"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_weight="1"
            android:id="@+id/creditMark2"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>
</LinearLayout>