<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:maxHeight="500dp"
        android:layout_height="wrap_content">
    <RelativeLayout
            android:background="@color/main2DeepBlue"
            android:id="@+id/keyword"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:layout_marginStart="40dp"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="키워드"
                android:textStyle="bold"
                android:textColor="@color/white"
                />

    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/keyword"
            android:id="@+id/keywordRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:orientation="horizontal"
            android:weightSum="10"
            android:id="@+id/keyWordInputs"
            android:layout_below="@id/keywordRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <RelativeLayout
                android:layout_weight="7"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <EditText
                    android:enabled="false"
                    android:id="@+id/keywordEdit"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent" />
        </RelativeLayout>
<RelativeLayout
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
    <Button
            android:enabled="false"
            android:layout_centerVertical="true"
            android:id="@+id/addKeyword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="추가"
            android:background="@color/gray2"
            android:textColor="@color/white"
            android:padding="4dp"
            />
</RelativeLayout>

    </LinearLayout>
    <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/keyWordInputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginEnd="20dp"
                android:layout_centerVertical="true"
                android:id="@+id/fdfdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="키워드 알림 사용"
                />
        <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/keySwitch"
                android:layout_marginStart="10dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/fdfdf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </RelativeLayout>

</RelativeLayout>