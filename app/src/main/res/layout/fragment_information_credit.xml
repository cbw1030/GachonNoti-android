<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="10dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:layout_alignParentTop="true"
                    android:textColor="#EC6746"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:id="@+id/creditAverage2"
                    android:text="현재수강학점 미포함"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:textColor="@color/black"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/credityou"
                    android:layout_below="@id/creditAverage2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:layout_below="@+id/credityou"
                    android:id="@+id/bububaba3"
                    android:weightSum="10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:padding="5dp"
                        android:background="@drawable/textborder"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:text="이수구분"
                        android:gravity="center"
                        android:id="@+id/isu"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:background="@drawable/textborder"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="이수기준"
                        android:layout_weight="2"
                        android:id="@+id/isu2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                <TextView
                        android:background="@drawable/textborder"
                        android:textColor="@color/black"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:text="취득학점"
                        android:layout_weight="2"
                        android:id="@+id/creditGrade"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_below="@+id/bububaba3"
                    android:id="@+id/creditRecycler2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>