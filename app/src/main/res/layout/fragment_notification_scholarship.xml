<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/table_out"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe4"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout android:layout_width="match_parent"
                     android:layout_height="match_parent">
            <RelativeLayout
                    android:visibility="gone"
                    android:id="@+id/lottieXX4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation_viewa4"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        app:lottie_autoPlay="true"
                        app:lottie_fileName="notfound.json"
                        app:lottie_loop="true"/>

                <TextView
                        android:layout_marginTop="-100dp"
                        android:layout_width="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/animation_viewa4"
                        android:text="인터넷 연결을 확인해주세요."/>
            </RelativeLayout>
            <RelativeLayout
                    android:id="@+id/par4"
                    android:layout_width="match_parent" android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/recylcer4"
                        android:layout_width="match_parent"
                        android:paddingBottom="3dp"
                        android:scrollbars="vertical"
                        android:layout_height="match_parent"/>
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:visibility="gone"
                        app:fabSize="normal"
                        app:elevation="0dp"
                        android:layout_width="58dp"
                        android:layout_height="58dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_gravity="center"
                        app:maxImageSize="30dp"
                        android:layout_margin="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"/>
            </RelativeLayout>
        </FrameLayout>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>