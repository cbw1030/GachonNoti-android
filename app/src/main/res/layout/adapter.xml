<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/table_in"
        android:layout_margin="0dp">
    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/titleIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:text=""
            />

            <androidx.cardview.widget.CardView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:cardCornerRadius="2dp"
                    android:gravity="start"
                    android:id="@+id/contexts"
                    android:layout_below="@id/titleIn"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/main2DeepBlue"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/date">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView
                            android:layout_centerInParent="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/WHITE"
                            android:gravity="center"
                            android:id="@+id/contextsIn"
                            android:text="@string/common"
                            android:textSize="11sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:gravity="center"
                    android:foregroundGravity="center"
                    android:id="@+id/date"
                    android:layout_toEndOf="@+id/contexts"
                    android:layout_below="@id/titleIn"
                    android:text="2019-06-13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/neww"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/date"
                    android:layout_below="@id/titleIn"
                    android:layout_toEndOf="@+id/date"
                    app:srcCompat="@drawable/neww"/>
            <ImageView
                    android:id="@+id/save"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="15dp"
                    android:layout_alignBottom="@+id/date"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleIn"
                    android:layout_toEndOf="@+id/neww"
                    app:srcCompat="@drawable/save"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>