<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/parents"
        android:layout_height="60dp"
        android:layout_width="match_parent"
        app:cardCornerRadius="0dp"
        app:cardElevation="0dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="@color/table_in"
        android:layout_margin="0dp">
    <RelativeLayout
            android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/titleIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:text="가천대학교, 최고라는 사실 밝혀져..."
            />
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:id="@+id/contexts"
                    android:layout_below="@id/titleIn"
                    android:text="@string/common"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:gravity="start"
                    android:id="@+id/date"
                    android:layout_toEndOf="@+id/contexts"
                    android:layout_below="@id/titleIn"
                    android:text="2019-06-13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <ImageView
                    android:id="@+id/neww"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/date"
                    android:layout_below="@id/titleIn"
                    android:layout_toEndOf="@+id/date"
                    app:srcCompat="@drawable/neww"/>
            <ImageView
                    android:id="@+id/save"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="5dp"
                    android:layout_width="15dp"
                    android:layout_alignBottom="@+id/date"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/titleIn"
                    android:layout_toEndOf="@+id/neww"
                    app:srcCompat="@drawable/save"/>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>