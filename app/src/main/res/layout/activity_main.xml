<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
    <RelativeLayout
            android:id="@+id/main_splash"
            android:background="@color/table_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/logo_splash2"
                    android:src="@drawable/defaults"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_marginBottom="10dp"/>
            <TextView
                    android:layout_below="@id/logo_splash2"
                    android:layout_marginTop="-5dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/mainDeepBlue"
                    android:text="@string/app_name"
            />
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/main_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <include

                layout="@layout/appbar"
                android:id="@+id/toolbar_main"/>

        <com.google.android.material.tabs.TabLayout
                android:layout_below="@+id/toolbar_main"
                android:id="@+id/navigation"
                app:tabMode="fixed"
                app:tabIndicatorGravity="bottom"
                app:tabIndicatorColor="@color/WHITE"
                android:layout_width="match_parent"
                app:tabSelectedTextColor="@color/WHITE"
                app:tabTextColor="@color/gray"
                app:tabIndicatorHeight="3dp"
                android:background="@color/main2Blue"
                app:tabRippleColor="@color/WHITE"
                android:layout_height="50dp">

        </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager.widget.ViewPager
                android:layout_below="@+id/navigation"
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"/>



    </RelativeLayout>
</FrameLayout>