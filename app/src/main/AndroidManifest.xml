<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="io.wiffy.gachonNoti">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
            android:allowBackup="false"
            android:name=".model.MyApplication"
            android:fullBackupContent="false"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:usesCleartextTraffic="true"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"

            android:theme="@style/AppTheme" tools:ignore="GoogleAppIndexingWarning">
        <meta-data
                android:name="com.google.firebase.messaging.default_notification_icon"
                android:resource="@drawable/defaults"/>
        <meta-data
                android:name="com.google.firebase.messaging.default_notification_channel_id"
                android:value="@string/channel"/>
        <meta-data
                android:name="com.google.firebase.messaging.default_notification_color"
                android:resource="@color/mainBlue"/>

        <activity android:name="io.wiffy.gachonNoti.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.webView.WebViewActivity"/>
        <activity android:name="io.wiffy.gachonNoti.ui.main.MainActivity"/>
        <!--<activity android:name=".ui.splash.FirstBootActivity"-->
        <!--android:theme="@style/dialog"/>-->
        <!--<activity android:name=".ui.main.setting.LanguageActivity"-->
        <!--android:theme="@style/dialog"/>-->
        <service
                android:name=".model.firebase.FirebaseMessagingService"
                android:exported="false"
                android:stopWithTask="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

    </application>

</manifest>